<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/jsp/decorators">
	<excludes>
        <pattern>/login.action</pattern>
        <pattern>/login!logout.action</pattern>
        <pattern>/css/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/swf/*</pattern>
        <pattern>/decorators/*</pattern>
        <pattern>/jsp/self/Transact/*</pattern>
    </excludes> 
	<!-- 后台管理的模板页面 -->
	<decorator name="manage" page="manage.jsp">
		<pattern>/user*.action</pattern>
		<pattern>/log*.action</pattern>
		<pattern>/systemconfig*.action</pattern>
		<pattern>/dayconfig*.action</pattern>
		<pattern>/dayconfig*.action</pattern>
		<pattern>/yuyue*.action</pattern>
	</decorator>
	<decorator name="self" page="self.jsp">
		<pattern>/self/*.jsp</pattern>
		<pattern>/self/*.action</pattern>
	</decorator>
</decorators>