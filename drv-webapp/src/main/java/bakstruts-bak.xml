<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
 
   <constant name="struts.enable.SlashesInActionNames" value="true" />
   <constant name="struts.custom.i18n.resources" value="com.smartken.drv.web.globalMsg"></constant>
<package name="base-package" extends="struts-default" abstract="true">
   <default-interceptor-ref name="paramsPrepareParamsStack"></default-interceptor-ref>
   <global-results>
       <result name="none" type="httpheader">
        <param name="status">200</param>
       </result>
       <result name="json" type="httpheader">
         <param name="status">200</param>
       </result>
       <result name="text" type="plainText">
        <param name="charSet">UTF-8</param>
       </result>
       <result name="error">/jsp/error.jsp</result>
   </global-results>
</package>
<include file="com/smartken/drv/web/action/sys/struts-sys.xml"></include> 
<include file="com/smartken/drv/web/action/booked/struts-booked.xml"></include>
<include file="com/smartken/drv/web/action/self/struts-self-vehdrv.xml"></include>
</struts>
